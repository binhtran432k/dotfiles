set window-title-basename "true"
set selection-clipboard "clipboard"

#
# Dracutux color theme
#

set notification-error-bg       "#ff5555" # Red
set notification-error-fg       "#ffffee" # Foreground
set notification-warning-bg     "#ffbb77" # Orange
set notification-warning-fg     "#444455" # Selection
set notification-bg             "#111122" # Background
set notification-fg             "#ffffee" # Foreground

set completion-bg               "#111122" # Background
set completion-fg               "#6677aa" # Comment
set completion-group-bg         "#111122" # Background
set completion-group-fg         "#6677aa" # Comment
set completion-highlight-bg     "#444455" # Selection
set completion-highlight-fg     "#ffffee" # Foreground

set index-bg                    "#111122" # Background
set index-fg                    "#ffffee" # Foreground
set index-active-bg             "#444455" # Current Line
set index-active-fg             "#ffffee" # Foreground

set inputbar-bg                 "#111122" # Background
set inputbar-fg                 "#ffffee" # Foreground
set statusbar-bg                "#111122" # Background
set statusbar-fg                "#ffffee" # Foreground

set highlight-color             "#ffbb77" # Orange
set highlight-active-color      "#ff77cc" # Pink

set default-bg                  "#111122" # Background
set default-fg                  "#ffffee" # Foreground

set render-loading              true
set render-loading-fg           "#111122" # Background
set render-loading-bg           "#ffffee" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#111122" # Background
set recolor-darkcolor           "#ffffee" # Foreground

#
# Startup options
#
set adjust-open width
set recolor true
set recolor-reverse-video true
set recolor-keephue true

set scroll-step 50
set sandbox none

map d scroll half-down
map u scroll half-up

map ge scroll bottom
